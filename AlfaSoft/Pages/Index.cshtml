@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Contacts</h3>
                    <button onclick='location.href="/Item"' class="btn btn-primary" style="margin: 5px;">New</button>
                </div>
                <form method="post">
                    <div class="box-body table-responsive">
                        <table id="items" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>E-mail</th>
                                    @if (AlfaSoft.Web.Helpers.SessionHelper.User.Id > 0)
                                    {
                                        <th width="100"></th>
                                        <th width="100"></th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Contacts.Any())
                                {
                                    foreach (var contact in Model.Contacts)
                                    {
                                        <tr>
                                            <td>@contact.Name</td>
                                            <td>@contact.ContactValue</td>
                                            <td>@contact.Email</td>
                                            @if (AlfaSoft.Web.Helpers.SessionHelper.User.Id > 0)
                                            {
                                                <td>
                                                    <a asp-page="./Item" asp-route-id="@contact.Id">Edit</a>
                                                </td>
                                                <td>
                                                    <button type="submit" asp-page-handler="delete" asp-route-id="@contact.Id">Delete</button>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5">No record found</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nome</th>
                                    <th>Contact</th>
                                    <th>E-mail</th>
                                    @if (AlfaSoft.Web.Helpers.SessionHelper.User.Id > 0)
                                    {
                                        <th></th>
                                        <th></th>
                                    }
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>